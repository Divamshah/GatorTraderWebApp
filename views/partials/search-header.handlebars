<div class="header-bar">
  <div class="logo" >
    <a href="/home" ><h1><br>Gator Trader</h1></a>
  </div>

  <!-- Login / Register / Dahsboard Buttons NavBar -->
  <nav class="navbar navbar-inverse gator-navbar" style="background-color:red">

    <!-- Name / Logo -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style="float:left;">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="myNavbar">

      <ul class="nav navbar-nav navbar-right">
        {{#if username}}
        <ul class="nav navbar-nav navbar-right">
          <li><span class="navbar-text"><span class="glyphicon glyphicon-user"></span> Hello, {{username}}</span></li>
          <li><a href="/clear"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
          <li><a href="/dashboard"><span class="glyphicon glyphicon-tags"></span> My Dashboard</a></li>
          {{#if isAdmin}}
          <li><a href="/admin"> <span class="glyphicon glyphicon-th-list"></span> Admin Dashboard</a></li>
          {{/if}}
        </ul>
        {{else}}
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        </ul>
        {{/if}}
      </ul>
    </div>
  </nav>

  <!-- Gator Trader / Search Bar -->
  <nav class="navbar navbar-inverse gator-navbar">

    <div class="navbar-header">




      <!-- Search Bar -->

      <div class="container search-bar">
        <!-- Category Dropdown -->
          <form action="/search" class="form-inline">
            <select class="custom-select gator-search-select custom-select-lg mb-3 btn btn-primary" name="category" id="category">
              <option value="-1" {{#if categories.selected}}selected{{/if}}>All</option>
              {{#each categories}}
              <option value="{{this.category_id}}" {{#if this.selected}}selected{{/if}}>{{this.category_name}}</option>
              {{/each}}
            </select>
            <div class="input-group">
              <input type="text" class="form-control" pattern="[A-Za-z0-9\s]+" maxlength="40" placeholder="Search" name="search" value="{{data.search}}">
              <!-- Search Bar Button -->
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </nav>

    <!-- Navigation Bar w/ Categories -->
    <nav class="navbar navbar-inverse gator-navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar2" style="float:left">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="myNavbar2">

          <ul class="nav navbar-nav navbar-right">
            <li><button type="button" class="btn btn-primary btn-lg orange-nav-btn" onclick="location.href='/index/';">About Us</button></li>
            <li><button type="button" class="btn btn-primary btn-lg orange-nav-btn" onclick="location.href='/post/';" >Sell An Item</button></li>
          </ul>
        </div>
      </div>
    </nav>

  </div>