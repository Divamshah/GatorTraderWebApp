
<body>
        <br>
    <div class="cont">
            <h2><center>Post Item</center></h2>
            <form action="/post" method="POST" enctype="multipart/form-data">  
                <div class="row center-block ">
                    <!-- Item Title form-->
                    <div class="form-group row centered">
                            <label for="Title" class="col-sm-1 col-form-label">Title:</label>
                            <div class="col-sm-4">
                              <input type="text" class="form-control" name="title" id="Title" maxlength="20" required>
                            </div>
                    </div>
                    <!-- Item category form-->
                    <div class="form-group row centered">
                            <label for="category" class="col-sm-1 col-form-label">Category:</label>
                            <div class="col-sm-4">
                                    <select class="custom-select" name="category" id="category" 
                                    oninvalid="setCustomValidity('Please select a category.')" onchange="try{setCustomValidity('')}catch(e){}"
                                    required>
                                            <option selected value="">Choose...</option>
                                            {{#each categories}}
                                            <option value="{{this.category_id}}">{{this.category_name}}</option>
                                            {{/each}}
                                            {{!-- <option value="2">Two</option>
                                            <option value="3">Three</option> --}}
                                    </select>
                            </div>
                    </div>
                    <!--Item price form-->
                    <div class="form-group row centered">
                            <label for="Price" class="col-sm-1 col-form-label">Price:</label>
                            <div class="col-sm-4">
                              <input type="text" class="form-control" name="price" id="Price" maxlength="10" required>
                            </div>
                    </div>
                    <!-- Item description form-->
                    <div class="form-group row centered">
                            <label for="descriptionInput" class="col-sm-1 col-form-label">Description:</label>
                            <div class="col-sm-4">
                                <textarea class="form-control" name="description" id="descriptionInput" rows="4" placeholder="Write a description here..."required></textarea>
                             </div>
                    </div>

                    <div class ="form-group row centered">
                        <label for="Images" class="col-sm-1 col-form-label">Images:</label>
                        <div class="col-sm-4">
                            <input type="file" class="custom-file-input" name="image_file" id="Images" multiple required>
                          </div>
                    </div>

                    <div class="center" style="line-height:0.7;">
                          <p>Once an item has been posted it is in default pending status.</p>
                          <p>Please wait wait until Approved by Administrator to go Live.<p>
                    </div>
                    <!--Buttons-->
                   <div align="center">
                    <button type="submit" class="btn btn-primary btn-lg">Cancel</button>
                    <span style="margin-left:20%; margin-right:20%;"></span>
                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                </div>
                </div>
            </form>
    </div>
</body>