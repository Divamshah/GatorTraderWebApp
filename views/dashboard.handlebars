
<div class="body">
	<div class='page-title container'>
		<h2>My Dashboard</h2>
	</div>

	<div class="view-tabs row">
		<button class="tab-link col-sm-4" onclick="viewSwitch('Items', this, 'orange')" id="defaultOpen">Items</button>
		<button class="tab-link col-sm-4" onclick="viewSwitch('Messages', this, 'orange')" >Messages</button>
	</div>



	<div class="body-table row ">
		<div  class="item-list col-sm-8 tab-content" id="Items">
			<div class="filters"> {*} Total Items
				<span class="dropdown filter-dropdown">
					<button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="filters-menu" data-toggle="dropdown" >
						Filter by <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu" aria-labelledby="filters-menu">
						<li role="presentation"><a role="menuitem" href="#">Newest First</a></li>
						<li role="presentation"><a role="menuitem" href="#">Oldest First</a></li>
						<li role="presentation"><a role="menuitem" href="#">Alphabetical</a></li>
						<li role="presentation"><a role="menuitem" href="#">Highest Price First</a></li>
						<li role="presentation"><a role="menuitem" href="#">Lowest Price First</a></li>

					</ul>
				</span>
			</div>

			<div class="table-responsive dashboard-item-table">
				<table class="">
					<thread>
						<tr class="dashboard-item-table-key" >
							<th >Thumbnail</th>
							<th >Title</th>
							<th class="vanish-2">Category</th>
							<th class="vanish-1">ID Number</th>
							<th >Price</th>
							<th class="vanish-1">Date</th>
							<th class="vanish-1">Description</th>
							<th class="vanish-2">Status</th>
							<th >Remove</th>

						</tr>
					</thread>
					<tbody>

					{{#if data}}
					{{#each data}}
					<tr class="dashboard-item">
						<td><button type="button" onclick="location.href='item/{{this.item_id}}'" class="btn item_image_thumbnail_btn">
							<img src="{{this.item_image_thumbnail}}" class="item_image_thumbnail">
						</button>
						</td>
						<td>
							<div class="item-name ">{{this.item_title}}</span>
						</td>
						<td class="vanish-2">
							<div class="item-category ">{{this.item_category}}</span>
						</td>
						<td class="vanish-1">
							<div class="item-id ">{{this.item_id}}</span>
						</td>
						<td>
							<div class="item-price ">{{this.item_price}}</span>
						</td>
						<td class="vanish-1">
							<div class="item-date ">{{this.item_date}}</span>
						</td>
						<td class="vanish-1">
							<div class="item-description ">{{this.item_description}}</div>
						</td>
						<td class="vanish-2">
							<div class="item-status">{{this.item_status}}</div>
						</td>
						<td>
							<button type="button" onclick ="" class="btn item-removal-btn">
								REMOVE<br/>ITEM
							</button>

						</td>
					</tr>
					{{/each}}
					{{/if}}

			</tbody>
		</table>
	</div>
</div>

<div id="Messages" class="tab-content">
<div class="message-list col-sm-8">
	<div class="filters"><span class="">{*} Total Messages</span><span class="dropdown filter-dropdown">
		<button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">Filter by
			<span class="caret"></span></button>
			<ul class="dropdown-menu">
				<li><a href="#">Item Alphabetical</a></li>
				<li><a href="#">User Alphabetical</a></li>
				<li><a href="#">Newest Message</a></li>
				<li><a href="#">Oldest Message</a></li>

			</ul>
		</span>
	</div>

	<!-- single message -->
	{{#if data.messages}}
	{{#each data.messages}}
		<div class='message-box'>
			<!-- <h3>User: {{this.user_name}}</h3><h4>Item:<a href="/details/{{this.item_id}}">{{this.item_name}}</a></h4><p>{{this.message_text}}</p> -->
			<h3>User: {{this.user_name}}</h3><h4>Item:<a href="#"></a></h4>
			<p>{{this.message_text}}</p>
		</div>
	{{/each}}
	{{/if}}
	<!-- end single message -->
</div>
</div>

<!-- sidebar 1: Campus Map Image -->
    <div class="col-sm-3 sidebar-box" >
      <h4>Campus Map Image</h4>
    </div> <!-- end sidebar 1 -->

    <!-- sidebar 2: Pick-Up Locations -->
    <div class="col-sm-3 sidebar-box" >
      <h4>Pick-Up Locations</h4>
    </div> <!-- end sidebar 2 -->

    <!-- sidebar 3: Campus Police -->
    <div class="col-sm-3 sidebar-box" >
      <h4>Campus Police</h4>
    </div> <!-- end sidebar 3 -->

    <!-- sidebar 4: Administration Contact -->
    <div class="col-sm-3 sidebar-box" >
      <h4>Administration Contact</h4>
    </div> <!-- end sidebar 4 -->

</div><!-- end row -->
</div><!-- end page body -->
