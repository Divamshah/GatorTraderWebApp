
{{#if data}}
<!-- Navigation Bar w/ Dropdowns -->

  <div class="container-fluid results">
        Showing {{data.length}} out of {{data.length}} results
        <span class="dropdown filter-dropdown"> <button class="btn btn-secondary btn-sm dropdown-toggle"
           type="button" id="filters-menu" data-toggle="dropdown">
            Sort by <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="filters-menu">
            <li role="presentation"><a role="menuitem" href="/dashboard?sort_item=item_date&type=DESC">Newest</a></li>
            <li role="presentation"><a role="menuitem" href="/dashboard?sort_item=item_date&type=ASC">Oldest</a></li>
            <li role="presentation"><a role="menuitem" href="/dashboard?sort_item=item_price&type=DESC">Highest Price</a></li>
            <li role="presentation"><a role="menuitem" href="/dashboard?sort_item=item_price&type=ASC">Lowest Price</a></li>
          </ul>
        </span>
  </div>
{{else}}
  <div class="container-fluid results red-results">
        No results found!
  </div>
{{/if}}


  <!-- Left-aligned media object -->
  <div class = "col-sm-9">
  <br>

  {{#if data}}
  {{#each data}}
  <div class="media">
    <div class="media-left">
    <a href="/item/{{this.item_id}}" target="_blank"><img src="{{this.item_image_thumbnail}}" class="media-object" style="width:200px"></a>
    </div>
    <div class="media-body">
      <h3 class="media-heading">Item Name: {{this.item_title}}</h3>
      {{!-- <h4>Category: </h4> --}}
      <h4>Price: {{this.item_price}}</h4>
      <br>
      <br>
      <br>
      <button type="button" class="btn btn-primary" onclick="window.open('/item/{{this.item_id}}', '_blank')" >View Details</button>
      <button type="button" class="btn btn-warning" onclick="window.open('/item/{{this.item_id}}?open=true', '_blank')" >Contact Seller</button>
    </div>
  </div>
  <hr>
  {{/each}}
  {{/if}}

  </div>

